# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api
GROQ_API_KEY=your_groq_api_key_here

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Civic Auth Configuration
NEXT_PUBLIC_CIVIC_CLIENT_ID=your_civic_client_id_here
NEXT_PUBLIC_BASE_URL=http://localhost:3000
CIVIC_CLIENT_ID=your_civic_client_id_here

# Aptos Configuration
NEXT_PUBLIC_APTOS_NODE_URL=https://fullnode.devnet.aptoslabs.com/v1
NEXT_PUBLIC_APTOS_RECEIVER_ADDRESS=your_contract_address_here
NEXT_PUBLIC_APTOS_CONTRACT_ADDRESS=your_contract_address_here

# Test Account Private Key (for sponsored payments when user wallet fails)
# Generate with: aptos key generate --output-file test-account.key
NEXT_PUBLIC_TEST_PRIVATE_KEY=your_test_account_private_key_here

# Admin Private Key (for contract initialization scripts)  
# Should be the same as the account that deployed the contract
ADMIN_PRIVATE_KEY=your_admin_private_key_here